<div class="container mt-3">
  <a href="/todo/form" class="btn btn-primary">Create</a>
  <ul class="nav nav-tabs mt-2">
    <li class="nav-item">
      <a class="nav-link active" href="#">Incomplete</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">All</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Completed</a>
    </li>
  </ul>
  <% @todos.each.with_index do |todo, index| %>
    <% if index%3 == 0 %>
      <div class="card-group mb-2">
      <% end %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= todo.title %></h5>
          <p class="card-text"><%= todo.title %></p>
          <button class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Mark as completed"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
              <path d="M13.485 1.431a1.473 1.473 0 0 1 2.104 2.062l-7.84 9.801a1.473 1.473 0 0 1-2.12.04L.431 8.138a1.473 1.473 0 0 1 2.084-2.083l4.111 4.112 6.82-8.69a.486.486 0 0 1 .04-.045z"/>
            </svg></button>
          <button class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
  <path d="M1.293 1.293a1 1 0 0 1 1.414 0L8 6.586l5.293-5.293a1 1 0 1 1 1.414 1.414L9.414 8l5.293 5.293a1 1 0 0 1-1.414 1.414L8 9.414l-5.293 5.293a1 1 0 0 1-1.414-1.414L6.586 8 1.293 2.707a1 1 0 0 1 0-1.414z"/>
</svg></button>
        </div>
        <div class="card-footer text-muted">
          <%= todo.event_date.to_formatted_s(:long)  %>
        </div>
      </div>
      <% if (index%3==2 || index == @todos.size-1) %>
      </div>
    <% end %>
  <% end %>
</div>
</div>
