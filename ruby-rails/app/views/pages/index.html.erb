<div class="container mt-3">
  <p><%=@todo.title%></p>
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#todoModal">Add todo item</button>
  <div class="row mt-3">
    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Title</h5>
          <p class="card-text">Description</p>
          <button class="btn btn-primary">Mark as done</button>
        </div>
        <div class="card-footer text-muted">
          Date
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Title</h5>
          <p class="card-text">Description</p>
          <button class="btn btn-primary">Mark as done</button>
        </div>
        <div class="card-footer text-muted">
          Date
        </div>
      </div>
    </div>
